<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shadow"
    android:elevation="7dp"
    >


    <TextView
        android:id="@+id/TextViewNickSchedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="NickName"
        android:textSize="25sp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/TextViewRoomSchedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextViewNickSchedule"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="Room"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/TextViewCleanStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextViewNickSchedule"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@+id/TextViewRoomSchedule"
        android:layout_toRightOf="@+id/TextViewRoomSchedule"
        android:text="not cleaned up yet"
        android:textSize="23sp"
        android:textColor="@android:color/holo_red_light"
        android:textStyle="bold"
        />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/ScheduleFloatingActionButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/TextViewNickSchedule"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:clickable="true"
        android:focusable="true"
        app:fabCustomSize="30dp"
        app:srcCompat="@drawable/ic_done_white_24dp" />



</RelativeLayout>