<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/productNameTitleDialogTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:text="Product name:" />

    <EditText
        android:id="@+id/productNameDialogEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_toEndOf="@+id/productNameTitleDialogTextView"
        android:layout_toRightOf="@+id/productNameTitleDialogTextView"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="15sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/priceTitleDialogTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productNameTitleDialogTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:text="Price:"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/priceDialogEditText"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productNameTitleDialogTextView"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/priceTitleDialogTextView"
        android:layout_toRightOf="@+id/priceTitleDialogTextView"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="15sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/dateTitleDialogTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/priceTitleDialogTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="20dp"
        android:text="Purchase date:"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/datePickerDialogTextView"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/priceTitleDialogTextView"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@+id/dateTitleDialogTextView"
        android:layout_toRightOf="@+id/dateTitleDialogTextView"
        android:gravity="center"
        android:text="26-05-2019"
        android:textSize="15sp"
        android:textColor="?attr/editTextColor"/>

</RelativeLayout>